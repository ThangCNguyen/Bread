<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/cornerbread"
        android:layout_alignParentRight="true"
        ></ImageView>

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:layout_marginStart="20dp"
        app:srcCompat="@drawable/arrow" />

    <TextView
        android:id="@+id/notificationSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:text="Notifications Setting"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/lowbudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:paddingLeft="30dp"
        android:text="Budget drops below 50"
        android:textColor="@color/black"
        android:textSize="18dp"
        />

    <Switch
        android:id="@+id/lowbudgetswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="99dp"
        android:paddingLeft="300dp"
        android:checked="false" />

    <TextView
        android:id="@+id/budgetEnds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:paddingLeft="30dp"
        android:text="Notify before budget ends"
        android:textColor="@color/black"
        android:textSize="18dp"
        />

    <Switch
        android:id="@+id/budgetEndSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="149dp"
        android:paddingLeft="300dp"
        android:checked="false"/>
</RelativeLayout>